@model IEnumerable<REALWEBAPP.Models.Address>

@{
    ViewBag.Title = "Index";
}

<h2>Addresses</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Street Number")
        </th>
        <th>
            @Html.DisplayName("Street Name")
        </th>
        <th>
            @Html.DisplayName("City")
        </th>
        <th>
            @Html.DisplayName("State")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
    
}

</table>
<dd>
    @Html.ActionLink("Create a New Address", "Create", new { @class = "btn btn-success" })
</dd>
